<div class="ai-container">
  <h3>AI指令</h3>

  <div class="ai-status" id="ai-status">
    <div class="status-indicator"></div>
    <div class="status-text">AI助手状态</div>
    <button id="ai-retry-button" class="mini-button ml-auto" title="重试连接">
      <i class="fas fa-sync-alt"></i>
    </button>
  </div>

  <div class="ai-controls-row">
    <div class="ai-control-item ai-control-model">
      <label for="ai-model-selector">AI模型:</label>
      <select id="ai-model-selector" class="ai-model-selector">
        <option value="openai">OpenAI GPT-4</option>
        <option value="deepseek">DeepSeek</option>
      </select>
    </div>
    
    <div class="ai-control-item ai-control-env">
      <label for="ai-env-selector">执行环境:</label>
      <select id="ai-env-selector" class="ai-env-selector">
        <option value="">无环境 (生成代码)</option>
        <!-- 环境列表将由JS动态填充 -->
      </select>
    </div>
  </div>

  <div class="ai-input-container">
    <textarea id="ai-command-input" placeholder="输入指令，例如：生成打开百度的脚本" rows="5"></textarea>
    
    <div class="ai-button-container">
      <button id="command-btn" class="button primary-button">执行</button>
    </div>
  </div>

  <div id="logs-container" class="logs-container"></div>
</div> 